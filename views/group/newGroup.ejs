<%- include('../partials/header.ejs')%>

<div class="main">
  <h1>Create A New Group!</h1>

  <form class="forms" action="/groups" method="POST">
    <table>
      <tr>
        <td>
          <label for="name"><b>Group Name:</b></label>
        </td>
        <td>
          <input
            type="text"
            id="name"
            name="name"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="members"><b>Group Members:</b></label>
        </td>
        <td>
          <input type="text" id="members" name="members" class="fixed-width" />
        </td>
      </tr>
      <tr>
        <td><button>Create Group</button></td>
      </tr>
    </table>
  </form>
  <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>

<%- include('../partials/footer.ejs')%>
