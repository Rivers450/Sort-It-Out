<%- include('../partials/header.ejs')%>

<div class="main">
  <h1><%= group.title%></h1>
  <h3 class="info">
    <b>Owned by: <%=group.owner.firstName%> <%=group.owner.lastName%></b>
  </h3>
  <h2>Members:</h2>
  <p><%=group.memberName%></p>
  <h2>Chores:</h2>
  <% if(group.chores) { %> <% group.forEach(group=>{ %>
  <p><%=group.chores%></p>
  <% })} else { %>
  <h3>There are no chores to display.</h3>
  <% } %>
  <form class="groupForm">
    <%if(user == group.owner._id) { %>
    <button
      type="submit"
      formmethod="GET"
      formaction="/groups/<%= group.id %>/choreForm"
    >
      Add Chores
    </button>
    <button
      type="submit"
      formmethod="GET"
      formaction="/groups/<%= group.id %>/edit"
    >
      Edit Group
    </button>
    <button
      type="submit"
      formmethod="POST"
      formaction="/groups/<%= group.id %>?_method=DELETE"
    >
      Delete Group
    </button>
    <%} %>
    <button
      type="submit"
      formmethod="POST"
      formaction="/groups/<%= group.id %>"
    >
      Leave Group
    </button>
    <!-- needs work -->
  </form>
  <br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br /><br />
</div>

<%- include('../partials/footer.ejs')%>
