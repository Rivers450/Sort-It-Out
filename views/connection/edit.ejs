<%- include('../partials/header.ejs')%>

    <div class="main">
        <h1>Edit</h1>
        <form class="forms" method="POST" action="/connections/<%=crawl.id%>?_method=PUT">
            <table>
                <tr>
                    <td><label for="title" ><b>Event Name:</b></label></td>
                    <td><input type="text" id="title" name="title" value = "<%= crawl.title%>" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="category"><b>Type of Crawl:</b></label></td>
                    <td><input type="text" id="category" name="category" value="<%=crawl.category%>" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td class = "align-top"><label for="details"><b>Details:</b></label></td>
                    <td><textarea rows="5" id="details" name="details" class = "fixed-width" required><%= crawl.details%></textarea></td>
                </tr>
                <tr>
                    <td><label for="date"><b>When:</b></label></td>
                    <td><input type="Date" id="date" name="date" value="<%=date%>" class="fixed-width" required><br><br></td>
                </tr>
                <tr>
                    <td><label for="location"><b>Meetup Location:</b></label></td>
                    <td><input type="text" id="location" name="location" value="<%=crawl.location%>" class="fixed-width" required><br><br></td>
                </tr>
                <tr>
                    <td><label for="startTime"><b>Start Time:</b></label></label></td>
                    <td><input type="time" id="startTime" name="startTime" value="<%=crawl.startTime%>" class="fixed-width" required><br><br></td>
                </tr>
                <tr>
                    <td><label for="endTime"><b>End Time:</b></label></td>
                    <td><input type="time" id="endTime" name="endTime" value="<%=crawl.endTime%>" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="image"><b>Image URL:</b></label></td>
                    <td><input type="text" id="image" name="image" value="<%=crawl.image%>" class="fixed-width" required><br><br></td>
                </tr>
                <tr>
                    <td colspan="2" class = "align-right"><button>Submit</button></td>
                </tr>
                </table>        
        </form> <br><br><br><br><br>
    </div>

<%- include('../partials/footer.ejs')%>