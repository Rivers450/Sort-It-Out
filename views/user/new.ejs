<%- include('../partials/header.ejs')%>

    <div class="main">
        <h1>Create An Account!</h1>

        <form class="forms" action='/users' method='POST'>
            <table>
                <tr>
                    <td><label for="firstName"><b>First Name:</b></label></td>
                    <td><input type="text" id="firstName" name="firstName" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="lastName"><b>Last Name:</b></label></td>
                    <td><input type="text" id="lastName" name="lastName" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="email"><b>Email Address:</b></label></td>
                    <td><input type="email" id="email" name="email" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="lastName"><b>Username:</b></label></td>
                    <td><input type="text" id="username" name="username" class = "fixed-width" required></td>
                </tr>
                <tr>
                    <td><label for="password"><b>Password:</b></label></td>
                    <td><input type="text" id="password" name="password" class = "fixed-width" minlength="8" maxlength="64" required></td>
                </tr>
                <tr>
                    <td><button>Sign Up!</button></td>
                </tr>
            </table>
        </form>
        <br><br><br><br><br><br><br><br><br><br>
    </div>

<%- include('../partials/footer.ejs')%>