<%- include('../partials/header.ejs')%>

<div class="main">
  <h1>Create An Account!</h1> <br><br>
  <img src="/images/signUpPage.jpeg" alt="cleaning" class="signUpImageLeft">
  <img src="/images/signUpPage.jpeg" alt="cleaning" class="signUpImageRight">
  <form class="forms" action="/users" method="POST">
    <table class="signUp">
      <tr>
        <td>
          <label for="firstName"><b>First Name:</b></label>
        </td>
        <td>
          <input
            type="text"
            id="firstName"
            name="firstName"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="lastName"><b>Last Name:</b></label>
        </td>
        <td>
          <input
            type="text"
            id="lastName"
            name="lastName"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="email"><b>Email Address:</b></label>
        </td>
        <td>
          <input
            type="email"
            id="email"
            name="email"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="username"><b>Username:</b></label>
        </td>
        <td>
          <input
            type="text"
            id="username"
            name="username"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="password"><b>Password:</b></label>
        </td>
        <td>
          <input
            type="password"
            id="password"
            name="password"
            class="fixed-width"
            minlength="8"
            maxlength="64"
            required
          />
        </td>
      </tr>
      <tr>
        <td class="signupbutton"><button>Sign Up!</button></td>
      </tr>
    </table>
  </form><br /><br />
</div>

<%- include('../partials/footer.ejs')%>