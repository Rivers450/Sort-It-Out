<%- include('../partials/header.ejs')%>
<div class="main">
  <h1>Forget Password</h1>
  <br /><br />
  <form
    class="forms editGroup"
    action="/users/forgotPasswordForm"
    method="POST"
  >
    <table>
      <tr>
        <td>
          <label for="NewPassword"><b>New Password:</b></label>
        </td>
        <td>
          <input
            type="password"
            id="newPW"
            name="newPW"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label for="rNewPassword"><b>Re-enter New Password:</b></label>
        </td>
        <td>
          <input
            type="password"
            id="rNewPW"
            name="rNewPW"
            class="fixed-width"
            required
          />
          <input type="hidden" name="email" value="<%=email%>" />
        </td>
      </tr>
      <tr>
        <td class="loginbuttons" colspan="2"><button>Submit</button></td>
      </tr>
    </table>
  </form>
  <br /><br />
</div>
<%- include('../partials/footer.ejs')%>
