<%- include('../partials/header.ejs')%>
<div class="main">
  <h1>Forgot Password</h1><br /><br />
  <img src="/images/resetPass.png" alt="reset password icon" class="signUpImageLeft">
  <img src="/images/resetPass.png" alt="reset password icon" class="signUpImageRight">
  <p class="editHeader">Don't worry! Simply enter your new password twice to confirm!</p> 
  <p class="editHeader">Don't forget to click the Submit button to save your changes!</p> 
  <form
    class="forms editGroup"
    action="/users/forgotPasswordForm"
    method="POST"
  >
    <table>
      <tr>
        <td>
          <label style="margin-left: -40px;" for="NewPassword"><b>New Password:</b></label>
        </td>
        <td>
          <input
            type="password"
            id="newPW"
            name="newPW"
            class="fixed-width"
            required
          />
        </td>
      </tr>
      <tr>
        <td>
          <label style="margin-left: -40px;" for="rNewPassword"><b>Re-enter New Password:</b></label>
        </td>
        <td>
          <input
            type="password"
            id="rNewPW"
            name="rNewPW"
            class="fixed-width"
            required
          />
          <input type="hidden" name="email" value="<%=email%>" />
        </td>
      </tr>
      <tr>
        <td class="loginbuttons" colspan="2"><button>Submit</button></td>
      </tr>
    </table>
  </form>
  <br /><br />
</div>
<%- include('../partials/footer.ejs')%>
